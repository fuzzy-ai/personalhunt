extends layout

block content
  h1.day= title
  p.date= (posts[0]) ? posts[0].day : ""
  .container
    .row.firstrow
      .col-md-1.score f.io
      .col-md-1.score
        span.uparrow 
      .col-md-7
      .col-md-2
      .col-md-1
    each post in posts
      .row.productlist
        .col-md-1.upvote= post.score.toFixed(1)
        .col-md-1.upvote= post.votes_count
        .col-md-7
          a.title(href=post.redirect_url)= post.name
          .description= post.tagline
        .col-md-2
          a(href=post.user.profile_url)= post.user.name
